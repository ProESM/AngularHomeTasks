{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    //"rootDir": "D:/Dev/Projects/AngularHomeTasks/lesson_1",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    //"baseUrl": ".", //had to add this too
    "paths": {
      "@components/*": ["src/app/components/*"],
      "@containers/*": ["src/app/containers/*"],
      "@decorators/*": ["src/app/decorators/*"],
      "@models/*": ["src/app/models/*"],
      "@pipes/*": ["src/app/pipes/*"],
      "@services/*": ["src/app/services/*"],
      "@shared/*": ["src/app/modules/shared/*"]
    }
  }
}
